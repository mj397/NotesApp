<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rel_note_bottom_sheet"
    app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:text="New event \n (Swipe up to extend)"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tv_swipe_up"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        />
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_view_main_activity"
        app:behavior_hideable="true"
        app:behavior_peekHeight="80dp"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">




    <View
        android:layout_width="60dp"
        android:layout_height="5dp"
        android:background="@drawable/rounded_view_swipe"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_action_pin_white"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:rotation="45"
        android:background="@android:color/transparent"
        android:id="@+id/action_pin_main"
        android:visibility="invisible"/>



    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColorHint="@color/white"
        android:hint="Subject..."
        android:layout_alignParentLeft="true"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:id="@+id/et_subject"
        android:inputType="textCapSentences"
        android:background="@android:color/transparent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/et_subject"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textColorHint="@color/white"
        android:hint="Note..."
        tools:hint="Note..."
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:id="@+id/et_note"
        android:gravity="left"
        android:imeOptions="actionDone"
        android:inputType="textCapSentences"
        android:background="@android:color/transparent"
        />




</RelativeLayout>

</LinearLayout>